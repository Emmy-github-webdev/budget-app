<%= form_with(model: category) do |form| %>
  <div class="category-form">
    <div class="field">
      <%= form.label :name, style: "display: block "%>
      <%= form.text_field :name, class: "inventory-input", required: true %>
    </div>

    <div class="field">
      <%= form.label :icon, style: "display: block "%>
      <%= form.text_field :icon, class: "inventory-input", required: true %>
    </div>

    <div>
     <%= form.submit 'Add Category', class: "submit-btn btn" %>
    </div>
  </div>
<% end %>