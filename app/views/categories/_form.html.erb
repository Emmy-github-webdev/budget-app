<%= form_with(model: category) do |form| %>
  <div class="category-form">
    <div class="field">
      <%= form.text_field :name, placeholder: "Name", class: 'category-input', required: true %>
    </div>

    <div class="field">
      <%= form.text_field :icon, placeholder: "Image URL", class: "category-input", required: true %>
    </div>

    <div class="submit-btn">
     <%= form.submit 'Add Category', class: "submit-btn btn" %>
    </div>
  </div>
<% end %>