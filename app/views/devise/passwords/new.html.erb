<header class="navigation">
  <div class="nav-link">
  </div>
  <h1>Forgot Your Password?</h1>
  <div class="logout">
     
  </div>
</header>

<div class="forgot-password">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "email", class: 'category-input' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "submit-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
